<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appointments_recycler_view_item"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/appointments_recycler_view_item_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clinical_notes_big"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/cd_appointments_recycler_view_item_drawable" />

        <TextView
            android:id="@+id/appointments_recycler_view_item_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/appointments_recycler_view_item_drawable"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Blood Analysis" />

        <TextView
            android:id="@+id/appointments_recycler_view_item_appointment_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/appointments_recycler_view_item_type_text"
            app:layout_constraintTop_toBottomOf="@+id/appointments_recycler_view_item_type_text"
            tools:text="10:00 AM" />

        <TextView
            android:id="@+id/appointments_recycler_view_item_separator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sr_appointments_recycler_view_item_separator_text"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/appointments_recycler_view_item_appointment_time_text"
            app:layout_constraintStart_toEndOf="@+id/appointments_recycler_view_item_appointment_time_text"
            app:layout_constraintTop_toTopOf="@+id/appointments_recycler_view_item_appointment_time_text" />

        <TextView
            android:id="@+id/appointments_recycler_view_item_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/appointments_recycler_view_item_separator_text"
            app:layout_constraintStart_toEndOf="@+id/appointments_recycler_view_item_separator_text"
            app:layout_constraintTop_toTopOf="@+id/appointments_recycler_view_item_separator_text"
            tools:text="14/12/1992" />



        <TextView
            android:id="@+id/appointments_recycler_view_item_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/appointments_recycler_view_item_type_text"
            app:layout_constraintStart_toEndOf="@+id/appointments_recycler_view_item_type_text"
            app:layout_constraintTop_toTopOf="@+id/appointments_recycler_view_item_type_text"
            tools:text="Benaguasil" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>